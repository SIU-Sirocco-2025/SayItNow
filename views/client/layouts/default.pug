                "description": "Hệ thống theo dõi chất lượng không khí TP. Hồ Chí Minh theo thời gian thực",
                "contactPoint": {
                    "@type": "ContactPoint",
                    "contactType": "Customer Service",
                    "email": "thp.gia3@gmail.com"
                },
                "sameAs": [
                    "https://ecotrack.asia"
                ]
            }
        
        script(type="application/ld+json").
            {
                "@context": "https://schema.org",
                "@type": "WebSite",
                "name": "Eco Track",
                "url": "https://ecotrack.asia",
                "description": "Theo dõi chất lượng không khí TP. Hồ Chí Minh theo thời gian thực",
                "potentialAction": {
                    "@type": "SearchAction",
                    "target": "https://ecotrack.asia/aqi?q={search_term_string}",
                    "query-input": "required name=search_term_string"
                }
            }
        
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css")
