//- Modal template
mixin authModal(id, title, sections)
    div(
        id=id
        class="modal fade"
        tabindex="-1"
        aria-labelledby=`${id}Label`
        aria-hidden="true"
    )
        .modal-dialog.modal-dialog-centered.modal-lg
            .modal-content
                .modal-header
                    h5(id=`${id}Label` class="modal-title")= title
                    button.btn-close(
                        type="button"
                        data-bs-dismiss="modal"
                        aria-label="Đóng"
                    )
                .modal-body
                    each section in sections
                        h6= section.title
                        p.small= section.content
                        if section !== sections[sections.length - 1]
                            .mt-3
                .modal-footer
                    button.btn.btn-success(
                        type="button"
                        data-bs-dismiss="modal"
                    ) Đã hiểu

